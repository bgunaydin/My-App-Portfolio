<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.burhan.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotıfy Streamer"
        android:id="@+id/button_spotifyStreamer"
        android:layout_marginTop="25dp"
        android:background="#2979FF"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/button_scoresApp"
        android:layout_marginTop="23dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="#2979FF"
        android:layout_below="@+id/button_spotifyStreamer"
        android:layout_alignLeft="@+id/button_spotifyStreamer"
        android:layout_alignStart="@+id/button_spotifyStreamer"
        android:layout_alignRight="@+id/button_spotifyStreamer"
        android:layout_alignEnd="@+id/button_spotifyStreamer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lıbrary App"
        android:id="@+id/button_libraryApp"
        android:background="#2979FF"
        android:layout_below="@+id/button_scoresApp"
        android:layout_alignLeft="@+id/button_scoresApp"
        android:layout_alignStart="@+id/button_scoresApp"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/button_scoresApp"
        android:layout_alignEnd="@+id/button_scoresApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button_buildItBigger"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_libraryApp"
        android:layout_alignRight="@+id/button_libraryApp"
        android:layout_alignEnd="@+id/button_libraryApp"
        android:background="#2979FF"
        android:layout_alignLeft="@+id/button_libraryApp"
        android:layout_alignStart="@+id/button_libraryApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button_xyzReader"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/button_buildItBigger"
        android:layout_alignRight="@+id/button_buildItBigger"
        android:layout_alignEnd="@+id/button_buildItBigger"
        android:background="#2979FF"
        android:layout_alignLeft="@+id/button_buildItBigger"
        android:layout_alignStart="@+id/button_buildItBigger" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CapStone: My Own App"
        android:id="@+id/button_capstone"
        android:background="#c5e10000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

</RelativeLayout>
